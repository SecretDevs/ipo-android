<resources>

    <style name="Theme.Ipo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorPrimarySurface</item>
        <item name="colorError">@color/colorPrimaryError</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnError">@color/colorOnError</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="bottomNavigationStyle">@style/Theme.Ipo.BottomNavigationView</item>
    </style>

    <style name="Theme.Ipo.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.Ipo.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Theme.Ipo.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/Theme.Ipo.PopupOverlay</item>
        <item name="android:background">@color/colorPrimarySurface</item>
    </style>

    <style name="Theme.Ipo.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="labelVisibilityMode">labeled</item>
        <item name="background">@drawable/ic_rounded_view</item>
        <item name="itemIconSize">16dp</item>
        <item name="itemIconPadding">12dp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Theme.Ipo.NavText</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Theme.Ipo.NavText</item>
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.Ipo.AppTheme.BottomNavigationView
        </item>
    </style>

    <style name="ThemeOverlay.Ipo.AppTheme.BottomNavigationView" parent="">
        <item name="background">@drawable/ic_rounded_view</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorOnSurfaceMedium</item>
        <item name="colorSurface">@color/colorPrimarySurface</item>
    </style>

    <style name="Theme.Ipo.DealCard" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/Theme.Ipo.SmoothCornerView</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="Theme.Ipo.TabsCard" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/Theme.Ipo.SmoothCornerView</item>
        <item name="cardElevation">0dp</item>
        <item name="background">@color/colorAccent</item>
    </style>

    <style name="Theme.Ipo.Tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.Theme.Ipo.Paragraph.Bold</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Theme.Ipo.Button</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="Theme.Ipo.LockedIconCard" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/Theme.Ipo.SmoothCornerView</item>
        <item name="cardElevation">16dp</item>
    </style>

    <style name="Theme.Ipo.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Theme.Ipo.Button</item>
        <item name="shapeAppearance">@style/Theme.Ipo.SmoothCornerView</item>
    </style>

    <style name="Theme.Ipo.Button.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Theme.Ipo.Button.IconOnly.Filled" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Theme.IPO.InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeErrorColor">@color/colorRed</item>
        <item name="hintTextColor">@color/colorOnBackgroundMedium</item>
        <item name="hintTextAppearance">@style/TextAppearance.Theme.Ipo.Login</item>
        <item name="android:textAppearance">@style/TextAppearance.Theme.Ipo.Login</item>
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>

    <style name="Theme.IPO.InputField.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeErrorColor">@color/colorRed</item>
        <item name="hintTextColor">@color/colorOnBackgroundMedium</item>
        <item name="hintTextAppearance">@style/TextAppearance.Theme.Ipo.Login</item>
        <item name="android:textAppearance">@style/TextAppearance.Theme.Ipo.Login</item>
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>

    <style name="Theme.Ipo.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Ipo.SmoothCornerView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.Ipo.OnboardingCornerView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <style name="Theme.Ipo.LightCornerView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>