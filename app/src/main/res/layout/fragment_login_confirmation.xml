<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/colorPrimaryBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        style="@style/Theme.Ipo.AppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryBackground"
        android:paddingTop="24dp"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/appbar_title_layout"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_arrow_back"
                style="@style/Theme.Ipo.Button.IconOnly"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="@dimen/margin_default"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                app:icon="@drawable/ic_arrow_back"
                app:iconTint="@color/colorOnBackgroundMedium" />

            <TextView
                android:id="@+id/appbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_login"
                android:textAppearance="@style/TextAppearance.Theme.Ipo.Headline2"
                tools:text="Регистрация" />

        </FrameLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/login_confirmation_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        app:layout_constraintBottom_toTopOf="@+id/login_confirmation_resend_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:shapeAppearance="@style/Theme.Ipo.SmoothCornerView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_confirmation_card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/login_confirmation_card_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:text="@string/hint_login_confirmation_card"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Theme.Ipo.Headline3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Введите 4-х значный код" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_confirmation_card_input_layout1"
                style="@style/Theme.IPO.InputField"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toStartOf="@+id/login_confirmation_card_input_layout2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/login_confirmation_card_hint"
                app:shapeAppearance="@style/Theme.Ipo.LightCornerView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_confirmation_card_input1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:autofillHints="smsOTPCode"
                    android:textAppearance="@style/TextAppearance.Theme.Ipo.Login"
                    android:maxLength="1"
                    tools:text="5" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_confirmation_card_input_layout2"
                style="@style/Theme.IPO.InputField"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toStartOf="@+id/login_confirmation_card_input_layout3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/login_confirmation_card_input_layout1"
                app:layout_constraintTop_toBottomOf="@+id/login_confirmation_card_hint"
                app:shapeAppearance="@style/Theme.Ipo.LightCornerView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_confirmation_card_input2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Theme.Ipo.Login"
                    android:maxLength="1"
                    tools:text="7" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_confirmation_card_input_layout3"
                style="@style/Theme.IPO.InputField"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toStartOf="@+id/login_confirmation_card_input_layout4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/login_confirmation_card_input_layout2"
                app:layout_constraintTop_toBottomOf="@+id/login_confirmation_card_hint"
                app:shapeAppearance="@style/Theme.Ipo.LightCornerView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_confirmation_card_input3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Theme.Ipo.Login"
                    android:maxLength="1"
                    tools:text="8" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_confirmation_card_input_layout4"
                style="@style/Theme.IPO.InputField"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/login_confirmation_card_input_layout3"
                app:layout_constraintTop_toBottomOf="@+id/login_confirmation_card_hint"
                app:shapeAppearance="@style/Theme.Ipo.LightCornerView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_confirmation_card_input4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="start"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Theme.Ipo.Login"
                    android:maxLength="1"
                    tools:text="5" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/login_confirmation_card_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:text="@string/text_login_confirmation_phone_number"
                android:textAppearance="@style/TextAppearance.Theme.Ipo.Paragraph"
                android:textColor="@color/colorOnBackgroundMedium"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/login_confirmation_card_input_layout1"
                tools:text="Код был отправлен на номер +7 999 123-45-56" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_confirmation_resend_code"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="@string/text_btn_login_confirmation_resend_code"
        android:textAppearance="@style/TextAppearance.Theme.Ipo.Button"
        android:textColor="@drawable/white_button_text_color"
        app:backgroundTint="@color/colorGray2"
        app:layout_constraintBottom_toTopOf="@+id/login_confirmation_next_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:shapeAppearance="@style/Theme.Ipo.SmoothCornerView"
        tools:text="Отправить код ещё раз" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_confirmation_next_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="@string/text_btn_login_confirmation_next"
        android:textAppearance="@style/TextAppearance.Theme.Ipo.Button"
        android:textColor="@drawable/primary_button_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/login_confirmation_resend_code"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/login_confirmation_resend_code"
        app:layout_constraintVertical_chainStyle="packed"
        app:shapeAppearance="@style/Theme.Ipo.SmoothCornerView"
        tools:text="Далее" />

</androidx.constraintlayout.widget.ConstraintLayout>