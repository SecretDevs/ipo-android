<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_deal_layout"
    style="@style/Theme.Ipo.DealCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="item"
    tools:layout_marginEnd="16dp"
    tools:layout_marginStart="16dp"
    tools:layout_marginTop="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_deal_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_deal_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.Theme.Ipo.Subtext"
            android:textColor="@color/colorOnBackgroundMedium"
            android:singleLine="true"
            app:layout_constraintEnd_toStartOf="@+id/item_deal_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="#13551" />

        <TextView
            android:id="@+id/item_deal_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="@dimen/margin_default"
            android:textAppearance="@style/TextAppearance.Theme.Ipo.Subtext"
            android:textColor="@color/colorOnBackgroundMedium"
            app:layout_constraintEnd_toStartOf="@+id/item_deal_favorite_btn"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="20.03.2020 • 22:25" />

        <CheckBox
            android:id="@+id/item_deal_favorite_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:button="@drawable/ic_favorite_check"
            android:buttonTint="@color/colorOrange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_deal_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/gutter_default"
            android:textAppearance="@style/TextAppearance.Theme.Ipo.Headline3"
            android:textColor="@color/colorOnBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_deal_favorite_btn"
            tools:text="MYT Netherlands" />

        <TextView
            android:id="@+id/item_deal_name_traded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:textAppearance="@style/TextAppearance.Theme.Ipo.Headline3"
            android:textColor="@color/colorOnBackgroundMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_deal_name"
            app:layout_constraintTop_toTopOf="@+id/item_deal_name"
            tools:text="MYTE" />

        <com.google.android.material.chip.Chip
            android:id="@+id/item_deal_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:textAppearance="@style/TextAppearance.Theme.Ipo.Subtext.Bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_deal_name"
            tools:text="Сделка открыта"
            tools:chipBackgroundColor="@color/colorChipBackgroundDealOpen"
            tools:textColor="@color/colorChipTextDealOpen"/>

        <TextView
            android:id="@+id/item_deal_risk_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gutter_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:drawablePadding="@dimen/gutter_default"
            android:textAppearance="@style/TextAppearance.Theme.Ipo.Subtext"
            app:layout_constraintBottom_toBottomOf="@+id/item_deal_state"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/item_deal_state"
            app:layout_constraintTop_toTopOf="@+id/item_deal_state"
            tools:drawableStart="@drawable/ic_low_risk"
            tools:text="Низкий риск" />

        <TextView
            android:id="@+id/item_deal_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:textAppearance="@style/TextAppearance.Theme.Ipo.Paragraph"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_deal_state"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliquaLorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempo." />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>